{% extends 'base.html.twig' %}

{% block title %}Edit Course{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <div class="mb-8 flex justify-between items-center">
            <div class="flex items-center">
                <h1 class="text-3xl font-bold text-gray-800">Edit Course</h1>
                <span class="ml-4 bg-yellow-100 text-yellow-800 text-xs font-medium px-3 py-1 rounded-full">Editing Mode</span>
            </div>
            <div class="space-x-2">
                <a href="{{ path('app_course_index') }}" class="bg-gray-500 hover:bg-gray-600 text-white py-2 px-4 rounded-md transition duration-300 flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                    </svg>
                    Back to list
                </a>
            </div>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-lg border border-gray-200">
            {{ include('course/_form.html.twig', {'button_label': 'Update'}) }}
        </div>
        
        <div class="mt-6 flex justify-end">
            {{ include('course/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}