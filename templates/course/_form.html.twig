{{ form_start(form, {'attr': {'class': 'bg-white shadow-lg rounded-lg p-8 max-w-2xl mx-auto border border-gray-100'}}) }}
    <div class="space-y-6">
        {% for field in form %}
            {% if field.vars.name != '_token' %}
                <div class="mb-5">
                    <div class="flex justify-between items-center mb-2">
                        <label for="{{ field.vars.id }}" class="block text-gray-700 font-medium text-sm">
                            {{ form_label(field) }}
                        </label>
                        
                        {% if field.vars.required %}
                            <span class="text-xs bg-indigo-50 text-indigo-600 font-medium px-2 py-1 rounded-full">Required</span>
                        {% endif %}
                    </div>
                    
                    <div class="w-full">
                        {{ form_widget(field, {'attr': {
                            'class': 'border border-gray-300 rounded-lg px-4 py-3 w-full focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 shadow-sm transition duration-200',
                            'placeholder': field.vars.label ~ '...'
                        }}) }}
                    </div>
                    
                    {% if field.vars.help %}
                        <p class="mt-1 text-sm text-gray-500 italic">{{ field.vars.help }}</p>
                    {% endif %}
                    
                    <div class="text-red-500 text-sm font-medium mt-1">
                        {{ form_errors(field) }}
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
    
    <div class="flex items-center justify-between mt-8 pt-5 border-t border-gray-200">
        <a href="{{ path('app_course_index') }}" class="text-indigo-600 hover:text-indigo-800 text-sm font-medium transition duration-200 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Cancel
        </a>
        
        <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white py-2.5 px-6 rounded-lg font-medium shadow-sm transition duration-300 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            {{ button_label|default('Save Changes') }}
        </button>
    </div>
{{ form_end(form) }}